<%= form_for @invoice do |f| %>

  <fieldset class="invoice_details">
    <% if @invoice.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @invoice.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :company_name %><br />
      <%= f.text_field :company_name %>
    </div>
    <div class="field">
      <%= f.label :contact_email %><br />
      <%= f.text_field :contact_email %>
    </div>
    <div class="field">
      <%= f.label :contact_person %><br />
      <%= f.text_field :contact_person %>
    </div>
    <div class="field">
      <%= f.label :street_address %><br />
      <%= f.text_field :street_address %>
    </div>
    <div class="field">
      <%= f.label :post_code %><br />
      <%= f.text_field :post_code %>
    </div>


    <table id="users">
      <tr>
        <th>Navn</th>
        <th>Mail</th>
        <th>Telefonnummer</th>
      </tr>
      <%= render :partial => "user", :collection => @invoice.users %>
    </table>

	<p><%= link_to_function "Ny bruker",
		"$('#users').append('#{escape_javascript(render(:partial => "user", :object => User.new))}')"
	 %></p>


    <div class="actions">
      <%= f.submit %>
    </div>

  </fieldset>
<% end %>
